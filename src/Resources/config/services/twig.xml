<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="setono_sylius_criteo_plugin.twig.product_id"
                 class="Setono\SyliusCriteoPlugin\Twig\ProductIdExtension">
            <argument type="service" id="setono_sylius_criteo.resolver.product_id"/>
            <tag name="twig.extension"/>
        </service>

        <service id="setono_sylius_criteo_plugin.twig.format_money"
                 class="Setono\SyliusCriteoPlugin\Twig\FormatMoneyExtension">
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
