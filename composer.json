{
    "name": "setono/sylius-criteo-plugin",
    "description": "Sylius plugin integrating Criteo tracking scripts",
    "license": "MIT",
    "type": "sylius-plugin",
    "keywords": [
        "sylius",
        "sylius-plugin",
        "setono",
        "criteo"
    ],
    "require": {
        "php": ">=8.1",
        "knplabs/knp-menu": "^3.3",
        "matomo/device-detector": "^4.3 || ^5.0",
        "setono/tag-bag": "^2.0",
        "setono/tag-bag-bundle": "^3.0",
        "sylius/channel": "^1.0",
        "sylius/channel-bundle": "^1.0",
        "sylius/core": "^1.0",
        "sylius/core-bundle": "^1.0",
        "sylius/order": "^1.0",
        "sylius/product": "^1.0",
        "sylius/resource-bundle": "^1.6",
        "sylius/ui-bundle": "^1.0",
        "symfony/config": "^6.4 || ^7.0",
        "symfony/dependency-injection": "^6.4 || ^7.0",
        "symfony/event-dispatcher": "^6.4 || ^7.0",
        "symfony/form": "^6.4 || ^7.0",
        "symfony/http-foundation": "^6.4 || ^7.0",
        "symfony/http-kernel": "^6.4 || ^7.0",
        "symfony/security-bundle": "^6.4 || ^7.0",
        "twig/twig": "^2.14 || ^3.0",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "babdev/pagerfanta-bundle": "^3.8",
        "matthiasnoback/symfony-config-test": "^5.2",
        "matthiasnoback/symfony-dependency-injection-test": "^5.1",
        "phpunit/phpunit": "^9.6",
        "psalm/plugin-phpunit": "^0.19.5",
        "setono/code-quality-pack": "^2.9",
        "setono/sylius-tag-bag-plugin": "^1.3",
        "shipmonk/composer-dependency-analyser": "^1.8",
        "sylius/sylius": "~1.12.19",
        "symfony/browser-kit": "^6.4 || ^7.0",
        "symfony/debug-bundle": "^6.4 || ^7.0",
        "symfony/dotenv": "^6.4 || ^7.0",
        "symfony/intl": "^6.4 || ^7.0",
        "symfony/web-profiler-bundle": "^6.4 || ^7.0"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Setono\\SyliusCriteoPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Setono\\SyliusCriteoPlugin\\Tests\\": "tests/"
        },
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "ergebnis/composer-normalize": true,
            "symfony/thanks": false
        },
        "sort-packages": true
    },
    "scripts": {
        "analyse": "psalm",
        "check-style": "ecs check ",
        "fix-style": "ecs check --fix",
        "phpspec": "phpspec run",
        "phpunit": "phpunit",
        "test": [
            "@phpspec",
            "@phpunit"
        ]
    }
}
