{
    "name": "setono/sylius-criteo-plugin",
    "type": "sylius-plugin",
    "description": "Sylius plugin integrating Criteo tracking scripts",
    "keywords": [
        "sylius",
        "sylius-plugin",
        "setono",
        "criteo"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "piwik/device-detector": "^4.3",
        "setono/tag-bag-bundle": "^2.0",
        "setono/tag-bag-twig": "^1.1",
        "sylius/sylius": "^1.3",
        "thecodingmachine/safe": "^1.0"
    },
    "require-dev": {
        "matthiasnoback/symfony-config-test": "^4.0",
        "matthiasnoback/symfony-dependency-injection-test": "^4.0",
        "phpspec/phpspec": "^6.0",
        "phpunit/phpunit": "^9.5",
        "setono/code-quality-pack": "^2.1.3",
        "setono/sylius-behat-pack": "^0.2",
        "setono/sylius-tag-bag-plugin": "^1.1",
        "symfony/browser-kit": "^4.4 || ^5.0",
        "symfony/debug-bundle": "^4.4 || ^5.0",
        "symfony/dotenv": "^4.4 || ^5.0",
        "symfony/intl": "^4.4 || ^5.0",
        "symfony/web-profiler-bundle": "^4.4 || ^5.0",
        "symfony/web-server-bundle": "^4.4 || ^5.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\SyliusCriteoPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Setono\\SyliusCriteoPlugin\\": "tests/"
        },
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse -c phpstan.neon -l max src/",
        "check-style": "vendor/bin/ecs check src/ tests/Behat/",
        "fix-style": "vendor/bin/ecs check src/ tests/Behat/ --fix",
        "phpspec": "vendor/bin/phpspec run",
        "phpunit": "vendor/bin/phpunit",
        "test": [
            "@phpspec",
            "@phpunit"
        ]
    }
}
